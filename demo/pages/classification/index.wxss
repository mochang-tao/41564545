/* pages/classification/index.wxss */
.main{
  display: flex;
  width: 100%;
  height: 100%;
}
.left{
  width: 25%;
  background-color: aqua;
  box-sizing: border-box;
  border-right: 10px solid #ffffff;
}
.left-son{
  height: 120px;
  line-height: 120px;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 10px solid #ffffff;
  border-top:10px solid #ffffff;
}
.right{
  width: 75%;
  display: flex;
  flex-wrap: wrap;
}
.right-item{
  width: 40%;
  height: 100px;
  padding: 10px;
}
.right-item-img{
  width: 70%;
  height: 70%;
  margin: 0 auto;
}
.right-tiem-text{
  text-align: center;
}
.right-c{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: start;
}
.right-item:hover{
  padding: 0;
  border: 10px solid aqua;
  background-color: blueviolet;
}
