.shop{
  background-color: rgb(243, 237, 237);
  height: 100%;
}
/* 头部 */
.head{
  width: 100%;
  display: flex;
  height: 6vh;
  line-height: 6vh;
}
.head-left{
  width: 18vw;
  text-align: center;
  font-size: 1.2rem;
  font-weight: 600;
}
.head-middle{
  width: 50vw;
  color: #cccccc;
}
.head-news-box{
  width: 10vw;
  
}
.head-shop{
  width: 10vw;
  margin: 0 1vw;
}
.head-img{
 width: 10vw;
}
/* 头部结束 */
/* 搜索开始 */
.search{
  width: 100%;
  height: 6vh;
  display: flex;
  margin-bottom: 20px;
}
.search-left{
  display: flex;
  width: 80%;
  background-color: #f5f1f1;
  margin: 0 5vw;
  border-radius: 10px;
  padding: 0 2vw;
}
.search-right{
  width: 15%;
  padding-top: 5px;
}
.search-icon{
  width: 10%;
}
.search-ar{
 width: 10%;
}
.search-input{
width: 80%;
}
/* 搜索结束 */
/* 分类开始 */
.classIfy{
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.classIfy-childred{
  width: 30vw;
  height: 9vh;
}
.classIfy-childred-img{
  width: 100%;
  height: 100%;
}
.classIfyNo2{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.classIfyNo2-childred{
  width: 17vw;
  height: 80px;
}
.classIfyNo2-childred-img{
  width: 100%;
  height: 60px;
}
.interest{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.interest-childerd{
  width: 15vw;
  height: 10vh;
}
.interest-childerd-img{
  width: 100%;
  height: 7vh;
}
.blibli{
 width: 96%;
 margin: 0 auto;
 margin-top: 10px;
 display: flex;
}
.blibli-left{
  width: 50%;
}
.blibli-left-swiper{
  border-radius: 20px;
  background: no-repeat;
  background-size: 100% 100%;
  background-position: center center;
}
.blibli-right{
  width: 50%;
}
.blibli-right-title{

}
.blibli-right-content{
  width: 50%;
  height: 90%;
}
.blibli-right-img{
  width: 100%;
  height: 80%;
}
.blibli-right-price{
    text-align: center;
    width: 80%;
    margin: 0 auto;
    background-color: #decff7;
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 5px;
    border-top-right-radius: 5px;
    color: rgb(60, 60, 177);
}
.fourModular{
  width: 100%;
  height: 140px;
  display: flex;
  justify-content: space-around;
  padding-top: 10px;
  box-sizing: border-box;
}
.fourModular-childerd{
  width: 25%;
  height: 100%;
  background-color: #fff;
  border-radius: 10px;
  margin: 0 2px;
  padding-top: 5px;
  box-sizing: border-box;
}
.fourModular-img{
  width: 90%;
  height: 55%;
  margin: 0 auto;
  padding-top: 5px;
}
.fourModular-title{
  text-align: center;
  font-weight: 600;
}
.fourModular-classIfy{
  width: 90%;
  margin: 0 auto;
  background-color:rgb(243, 237, 237);
  text-align: center;
  font-weight: 500;
  border-radius: 20px;
}
.list{
  width: 50%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content:stretch;
}
.list-son{
  width: 46%;
  margin: 0 2%;
  border-radius: 10px;
  background-color: #fff;
  margin: 5px;
  flex-grow: 1;
}
.list-img{
  height: 185px;
  width: 100%;
  background-size: 100% auto;
  background-position: center top;
}
.list-show{
  width: 100%;
  height: 30px;
  background-size: 100% auto;
  line-height: 30px;
  background-position: center top;
  padding: 0 15px;
  font-size: 14px;
  box-sizing: border-box;
}
.list-title{
  overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 0.8rem;
    text-indent:0.8rem;
    font-weight: 600;
}
.list-content{
  font-size: 0.8rem;
  padding: 0 5px;
  letter-spacing:1px;
  margin-top: 5px;
}
.list-Price{
  display: flex;
  width: 100%;
  margin-top: 6px;
  line-height: 2rem;
  height: 2rem;
  padding: 5px;
}
.list-price-left{
  font-size: 0.9rem;
  width: 60%;
  color: rgb(238, 103, 238);
}
.list-price-right{
  width: 40%;
  font-size: 12px;
  color: #cccccc;
}
.list-label{
  width: 100%;
  display: flex;
  margin-top: 5px;
}
.list-label-children{
  background-color: #e78ef3;
  color: rgb(186, 39, 223);
  margin-left: 5px;
  height: 16px;
  font-size: 12px;
  padding: 2px 5px;
  border-radius: 5px;
}