/* 头部 */
.head{
  width: 100%;
  display: flex;
  height: 6vh;
  line-height: 6vh;
}
.head-left{
  width: 18vw;
  text-align: center;
  font-size: 1.2rem;
  font-weight: 600;
}
.head-middle{
  width: 50vw;
  color: #cccccc;
}
.head-news-box{
  width: 10vw;
  
}
.head-shop{
  width: 10vw;
  margin: 0 1vw;
}
.head-img{
 width: 10vw;
}
/* 头部结束 */
/* 搜索开始 */
.search{
  width: 100%;
  height: 6vh;
  display: flex;
  margin-bottom: 20px;
}
.search-left{
  display: flex;
  width: 80%;
  background-color: #f5f1f1;
  margin: 0 5vw;
  border-radius: 10px;
  padding: 0 2vw;
}
.search-right{
  width: 15%;
  padding-top: 5px;
}
.search-icon{
  width: 10%;
}
.search-ar{
 width: 10%;
}
.search-input{
width: 80%;
}
/* 搜索结束 */
/* 分类开始 */
.classIfy{
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.classIfy-childred{
  width: 30vw;
  height: 9vh;
}
.classIfy-childred-img{
  width: 100%;
  height: 100%;
}
.classIfyNo2{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.classIfyNo2-childred{
  width: 17vw;
  height: 80px;
}
.classIfyNo2-childred-img{
  width: 100%;
  height: 60px;
}
.interest{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.interest-childerd{
  width: 15vw;
  height: 10vh;
}
.interest-childerd-img{
  width: 100%;
  height: 7vh;
}