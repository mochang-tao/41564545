.main{
  width: 100%;
  height: 100%;
}
.head{
  width: 100%;
  height: 6vh;
}
.head-right{
  float: right;
  height: 100%;
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.head-right-item{
  height: 50rpx;
  margin-left: 20px;
}
.brief{
  width: 100%;
  height: 32vh;
}
.brief-top{
  width: 100%;
  display: flex;
  height: 45%;
}
.brief-top-img{
  width: 25%;
  text-align: center;
}
.brief-top-content{
  width: 50%;
}
.brief-top-space{
  width: 25%;
  line-height: 100px;
  color: #8a8a8a;
}
.brief-bottom{
  width: 100%;
  height: 27%;
  display: flex;
}
.brief-bottom-item{
  width: 33%;
  height: 100%;
  text-align: center;
}
.vertical-line{
  width: 1px;
  height: 60rpx;
  line-height: 100px;
  background-color: #beb8b8;
  margin-top: 30rpx;
}
.vip{ 
  background-image: linear-gradient(rgba(255,0,0,0),rgba(255,0,0,0.2));
  height: 28%;
  box-sizing: border-box;
}
.vip-son{
  width: 92%;
  margin: 0 auto;
  border: 1px solid #bd6b6b;
  border-bottom: none;
  height: 100%;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding-top: 12rpx;
  padding-left: 52rpx;
  color: #bd6b6b;
  display: flex;
}
.vip-son-right{
  width: 15%;
  font-size: 2rem;
}
.vip-son-left{
  width: 85%;
}
/* 下屏幕 */
.classIfy{
  width: 92%;
  height: 62vh;
  margin: 0 auto;
  box-sizing: border-box;
}
.record{
  width: 100%;
  padding: 10px 0;
}
.record-top{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.record-top-son{
  width: 20%;
}
.record-top-img{
  width: 32px;
  height: 32px;
  margin: 0 auto;
}
.record-top-text{
  margin-top: 5px;
  text-align: center;
}
.record-bottom{
  width: 92%;
  height: 120rpx;
  display: flex;
  padding: 20rpx;
  border: 1px solid #ccc;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx 20rpx 0 20rpx;
  /* background-image: linear-gradient(to right, rgba(255.0.0.0) ,rgba(255.0.0.01)); */
  background-image: linear-gradient(to right, rgba(255,0,0,0),rgba(255,0,0,0.1));
}
.record-bottom-rigth{
 width: 65%;
}
.record-bottom-left{
  width: 34%;
}
.service{
  width: 92%;
  height: 400px;
  margin: 0 auto;
}
.tuijian{
  height: 200px;
  width: 100%;
}
.tuijian-title{
  font-size: 20px;
  font-weight: 900;
  margin-bottom: 5px;
}
.tuijian-list{
  display: flex;
  flex-wrap: wrap;
}
.tuijian-list-son{
  width: 25%;
  height: 70px;
  text-align: center;
}
.tuijian-list-son-img{
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
}
.tuijian-list-son-text{
  margin-top: 5px;
}
.gengduo{
  padding-top: 40px;
  width: 100%;
  height: 200px;
}
.gengduo-title{
  font-size: 20px;
  font-weight: 900;
  margin-bottom: 5px;
}
.gengduo-item{
  height: 50px;
  width: 100%;
  display: flex;
  line-height: 35px;
}
.gengduo-img{
  width: 64rpx;
  height: 64rpx;
}
.gengduo-label{
  width: 80%;
}
.gengduo-to-right{
  width: 10%;
  color: #ccc;
}