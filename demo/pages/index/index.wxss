/**index.wxss**/
.main{
  width: 100%;
}
.head{
  display: fixed;
  height: 2.1rem;
  width: 100%;
  text-align: center;
  background-color: rgb(98, 102, 102);
}
.head .left{
  float: left;
  line-height:2.1rem;
}
.head .rigth{
  float: right;
  margin-right: 0.98rem;
}
.initial{
  text-align: center;
  margin: 0 auto;
}
.initial button{
  background-color: aqua;
}
.rigth_img{
  width: 2.1rem;
  height: 2.1rem;
  display: inline-block;
}
.right_name{
  height: 2.1rem;
  line-height: 2.1rem;
  display: inline-block;
  color: #ffffff;
}
/* body开始 */
.body{
  height: 29.8rem;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-around;
}
.body_item{
  width: 45%;
  height: 6.1rem;
  padding: 5px;
  text-align: center;
}
.body_item_img{
  width: 2.1rem;
  height: 2.1rem;
  margin: 2.1rem auto;
}
.body_item_text{
  color: aqua;
}
